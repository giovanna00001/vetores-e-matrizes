#include <iostream>
#include <fstream>
#include <iomanip>
using namespace std;

struct Consumo {
    double distancia;
    double combustivel;
};

int main() {
    ifstream arquivo("consumo.txt");
    if (!arquivo) {
        cout << "Erro ao abrir o arquivo consumo.txt!" << endl;
        return 1;
    }

    Consumo registro;
    double somaConsumo = 0.0;
    int contador = 0;

    cout << fixed << setprecision(2);

    cout << "Consumo de cada linha (km/l):\n";

    while (arquivo >> registro.distancia >> registro.combustivel) {
        double consumo = registro.distancia / registro.combustivel;
        cout << "Linha " << contador + 1 << ": " << consumo << " km/l" << endl;
        somaConsumo += consumo;
        contador++;
    }

    if (contador > 0) {
        double consumoMedioGeral = somaConsumo / contador;
        cout << "\nConsumo medio geral: " << consumoMedioGeral << " km/l" << endl;
    } else {
        cout << "Nenhum registro encontrado no arquivo." << endl;
    }

    arquivo.close();
    return 0;
}
