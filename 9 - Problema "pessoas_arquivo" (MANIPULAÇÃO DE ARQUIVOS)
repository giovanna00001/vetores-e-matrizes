#include <iostream>
#include <fstream>
#include <string>
using namespace std;

struct Pessoa {
    string nome;
    int idade;
};

int main() {
    int N;
    cout << "Quantas pessoas deseja cadastrar? ";
    cin >> N;
    cin.ignore();

    Pessoa pessoas[100];

    for (int i = 0; i < N; i++) {
        cout << "Pessoa " << i + 1 << ":\n";
        cout << "Nome: ";
        getline(cin, pessoas[i].nome);
        cout << "Idade: ";
        cin >> pessoas[i].idade;
        cin.ignore();
    }

    ofstream arquivoSaida("pessoas.txt");
    if (!arquivoSaida) {
        cout << "Erro ao abrir o arquivo para escrita!" << endl;
        return 1;
    }

    for (int i = 0; i < N; i++) {
        arquivoSaida << pessoas[i].nome << endl;
        arquivoSaida << pessoas[i].idade << endl;
    }
    arquivoSaida.close();

    cout << "\nPessoas gravadas no arquivo com sucesso!\n";

    ifstream arquivoEntrada("pessoas.txt");
    if (!arquivoEntrada) {
        cout << "Erro ao abrir o arquivo para leitura!" << endl;
        return 1;
    }

    cout << "\nPessoas cadastradas:\n";
    string nome;
    int idade;
    int contador = 1;

    while (getline(arquivoEntrada, nome)) {
        arquivoEntrada >> idade;
        arquivoEntrada.ignore(); 
        cout << "Pessoa " << contador << ": " << nome << ", " << idade << " anos" << endl;
        contador++;
    }

    arquivoEntrada.close();

    return 0;
}
