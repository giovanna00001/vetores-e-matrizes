#include <iostream>
#include <iomanip>
#include <vector>
using namespace std;

int main(){
    int N;

    
    cout << "Quantos numeros voce vai digitar?" << endl;
    cin >> N;
    
    vector<double> numeros(N);
    double soma = 0.0;
    
    
    for (int i = 0; i < N; i++){
        cout << "Digite um numero: ";
        cin >> numeros[i];
        soma += numeros[i];
    }
    cout << "VALORES = ";
    for (int i = 0; i < N; i++){
        cout << numeros[i] << " ";
    }
    cout << endl;
    
    double media = soma / N;
    
    cout << fixed << setprecision(2);
    cout << "SOMA = " << soma << endl;
    cout << "MEDIA = " << media << endl;
    
    cout << "abaixo do valores da media" << endl;
    for (int i=0; i<N; i++){
        if (numeros[i] < media){
            cout << numeros[i] << endl;
        }
    }
    return 0;
}
